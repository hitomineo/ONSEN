<div class ="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class ="text-center"><%= image_tag 'kaiinn.png', width: '40%', height: '40%', class: "mt-5"%></div>
        <div class ="mb-5 pb-5">
           <table class="table shadow">
            <thead class="table-active ">
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>

            <% @customers.each do |customer| %>
              <tbody>
                <tr>
                  <td>
                    <%= customer.id %>
                  </td>
                  <td>
                    <%= link_to "#{customer.name}", admin_customer_path(customer.id) %>
                  </td>
                  <td>
                    <%= customer.email %>
                  </td>
                  <% if customer.is_deleted == true %>
                    <td class="text-secondary font-weight-bold">退会</td>
                  <% else %>
                    <td class="text-success font-weight-bold">有効</td>
                  <% end %>
                </tr>
              </tbody>
            <% end %>
           </table>
        </div>
    </div>
  </div>
</div>