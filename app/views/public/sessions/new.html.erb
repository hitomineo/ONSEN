
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <form class="bg-home d-flex align-items-center w-150 h-150">
      <div class="container my-5 py-5 my-5 py-5">
        <%= render "public/shared/error_messages", resource: resource %>
          <div class="row">
            <div class="col-11 col-lg-5 jumbotron bg-transparent mx-auto mt-4" style="box-shadow: 0 0 5px 0px rgba(0, 0, 0, 0.2)">
              <div class="text-center">
                <%= image_tag 'login.png', width: '50%', height: '50%',class: "mb-3" %>
                  </br>
                    <div class="form-group form-group-lg">
                     <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %></br>
                    </div>
                      <div class="form-group form-group-lg">
                        <%= f.password_field :password, autocomplete: "current-password",placeholder:"パスワード" %>
                    </div>
              </div>

              <div class="text-center">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                     <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                  </div>
                <% end %>
              </div>

            <div class="text-center">
                <%= f.submit "Log in", class: "btn  btn-outline-secondary" %>
            </div>
 <%end%>

          </div>
        </div>
      </div>
  </form>

